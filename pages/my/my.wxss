/* pages/my/my.wxss */
.header{
  height:400rpx;
  background:#FFD161;
  display:flex;
  align-items:center;
  padding-left:10%;
}

.userinfo-avatar{
  width:128rpx;
  height:128rpx;
  border-radius:50%;
  margin-right:20rpx;
}
.userinfo-nickname{
  color:white;
}
.body{
  height:200rpx;
  width:80%;
  background:white;
  margin:auto;
  margin-top:-20rpx;
  box-shadow: 4rpx 4rpx 10rpx #FFD161;
  display:flex;
  flex-direction: column;
  justify-content:center;
  padding:20rpx;
}
.body-item{
  border-top:1px solid #ACACAC;
  line-height:100rpx;
}
.footer{ 
  width:430rpx;
  margin:auto;
  margin-top:160rpx;
  color:#1296db;
  font-size:30rpx;
}
.img{
  width:50rpx;
  height:50rpx;
  margin-right:10rpx;
}
.footer text{
  border-bottom:1px solid #1296db;
}