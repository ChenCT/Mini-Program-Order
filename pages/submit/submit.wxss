.header{
  background: white;
  padding:15rpx 0 15rpx 15rpx;
  font-size:30rpx;
}
.body-container {
  margin-bottom:130rpx;
  position:absolute;
  height:100%;
  width:100%;
}
.body{
  height:100%;
  overflow:auto;
}
.order{
  font-size:25rpx;
  background:white;
  padding-left:15rpx;
  margin-top:10px;
}
.title {
  color:#ACACAC;
  padding:15rpx 0;
  border-bottom: 1px solid #ACACAC;
}
.list {
  margin-right:15rpx;
  padding:15rpx 0;
  border-bottom: 1px solid #ACACAC;
}
.list .name,.list .price{
  font-size:30rpx;
} 
.list .row1{
  display:flex;
  
}
.row1 .name{
  width:90%;
  flex:1;
}
.row1 .numb{
  width:10%;
  text-align:right;
}
.list .price{
  color:red;
  text-align:right;
} 
.total{
  padding:15rpx 15rpx 15rpx 0;
  display:flex;
  font-size: 30rpx;
}
.total-info {
  width:50%;
}
.total-price{
  width:50%;
  color:red;
  text-align:right;
  font-size: 32rpx;
}
.ps{
  margin-top: 10px;
  font-size:25rpx;
  background: white;
  padding:15rpx;
}
.footer{
  position:fixed;
  bottom:0;
  right: 0;
  left: 0;
  display:flex;
  height: 100rpx;
}
.footer .img {
  position: absolute;
  height: 90rpx;
  width: 90rpx;
  border-radius: 100rpx;
  left: 20rpx;
  top: -45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer .howMuch {
  position: relative;
  flex: 1;
  font-size: 28rpx;
  background: white;
  line-height: 100rpx;
  padding-left: 130rpx;
}
.footer .submit {
  width: 200rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  background: #CCCCCC;
}
.footer .cost {
  margin-top: 10rpx;
  color: red;
  font-size: 50rpx;
  line-height: 50rpx;
  height: 50rpx;
  width: 100rpx;
} 